{
  "info": {
    "name": "Service Booking Platform API - FINAL",
    "_postman_id": "service-booking-platform-final",
    "description": "Complete API collection matching Spring Boot controllers",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [

    {
      "name": "AUTHENTICATION",
      "item": [

        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"CUSTOMER\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/register" }
          }
        },

        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = JSON.parse(responseBody);",
                  "pm.environment.set(\"jwt_token\", jsonData.data.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/login" }
          }
        },

        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/forgot-password" }
          }
        },

        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"otp\": \"123456\",\n  \"newPassword\": \"newpassword123\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/reset-password" }
          }
        },

        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": { "raw": "{{base_url}}/auth/logout" }
          }
        }
      ]
    },

    {
      "name": "USERS",
      "item": [

        { "name": "Get Profile", "request": { "method": "GET", "url": "{{base_url}}/users/profile" } },

        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Updated Name\"\n}" },
            "url": "{{base_url}}/users/profile"
          }
        },

        { "name": "Delete Account", "request": { "method": "DELETE", "url": "{{base_url}}/users/account" } },

        { "name": "Get All Users (Admin)", "request": { "method": "GET", "url": "{{base_url}}/users?page=0&size=10" } }

      ]
    },

    {
      "name": "SERVICE CATALOG",
      "item": [

        {
          "name": "Add Category",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Plumbing\",\n  \"description\": \"Plumbing services\",\n  \"icon\": \"plumbing-icon\"\n}" },
            "url": "{{base_url}}/services/categories"
          }
        },

        { "name": "Get Categories", "request": { "method": "GET", "url": "{{base_url}}/services/categories" } },

        {
          "name": "Add Service Item",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"categoryId\": 1,\n  \"name\": \"Pipe Repair\",\n  \"description\": \"Fix broken pipes\",\n  \"basePrice\": 500\n}" },
            "url": "{{base_url}}/services/items"
          }
        },

        { "name": "Search Services", "request": { "method": "GET", "url": "{{base_url}}/services/search?keyword=plumbing&page=0&size=10" } }

      ]
    },

    {
      "name": "BOOKINGS",
      "item": [

        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"serviceId\": 1,\n  \"bookingDateTime\": \"2026-03-15T10:00:00\",\n  \"location\": \"Mumbai\"\n}" },
            "url": "{{base_url}}/bookings"
          }
        },

        { "name": "Assign Provider", "request": { "method": "PUT", "url": "{{base_url}}/bookings/1/assign-provider?providerId=2" } },

        { "name": "Update Booking Status", "request": { "method": "PUT", "url": "{{base_url}}/bookings/1/status?status=ACCEPTED" } },

        { "name": "Customer Bookings", "request": { "method": "GET", "url": "{{base_url}}/bookings/customer?page=0&size=10" } },

        { "name": "Provider Bookings", "request": { "method": "GET", "url": "{{base_url}}/bookings/provider?page=0&size=10" } }

      ]
    },

    {
      "name": "PAYMENTS",
      "item": [
        { "name": "Record Payment", "request": { "method": "POST", "header": [{ "key": "Content-Type", "value": "application/json" }], "body": { "mode": "raw", "raw": "{\n  \"bookingId\": 1,\n  \"method\": \"CASH\"\n}" }, "url": "{{base_url}}/payments" } },
        { "name": "Mark Complete", "request": { "method": "PUT", "url": "{{base_url}}/payments/1/complete" } },
        { "name": "Payment History", "request": { "method": "GET", "url": "{{base_url}}/payments/history?page=0&size=10" } }
      ]
    },

    {
      "name": "RATINGS",
      "item": [
        { "name": "Submit Rating", "request": { "method": "POST", "header": [{ "key": "Content-Type", "value": "application/json" }], "body": { "mode": "raw", "raw": "{\n  \"bookingId\": 1,\n  \"stars\": 5,\n  \"comment\": \"Excellent service\"\n}" }, "url": "{{base_url}}/ratings" } },
        { "name": "Provider Ratings", "request": { "method": "GET", "url": "{{base_url}}/ratings/provider/1?page=0&size=10" } }
      ]
    },

    {
      "name": "NOTIFICATIONS",
      "item": [
        { "name": "Get Notifications", "request": { "method": "GET", "url": "{{base_url}}/notifications?page=0&size=10" } },
        { "name": "Mark Read", "request": { "method": "PUT", "url": "{{base_url}}/notifications/1/read" } }
      ]
    },

    {
      "name": "PROVIDER",
      "item": [
        {
          "name": "Update Provider Profile (Multipart)",
          "request": {
            "method": "PUT",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "documentFile", "type": "file", "src": "" },
                { "key": "selectedServices", "value": "1,2", "type": "text" }
              ]
            },
            "url": "{{base_url}}/provider/profile"
          }
        },
        { "name": "Update Status", "request": { "method": "PUT", "url": "{{base_url}}/provider/status?status=ONLINE" } },
        { "name": "Approve Provider", "request": { "method": "PUT", "url": "{{base_url}}/provider/1/approve" } },
        { "name": "Reject Provider", "request": { "method": "PUT", "url": "{{base_url}}/provider/1/reject" } },
        { "name": "Pending Providers", "request": { "method": "GET", "url": "{{base_url}}/provider/pending?page=0&size=10" } }
      ]
    },

    {
      "name": "ADMIN",
      "item": [
        { "name": "Dashboard", "request": { "method": "GET", "url": "{{base_url}}/admin/dashboard" } },
        { "name": "Monthly Report", "request": { "method": "GET", "url": "{{base_url}}/admin/reports/monthly" } }
      ]
    }

  ]
}
